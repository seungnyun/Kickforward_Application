<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nameTitle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="profile">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="profileTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#838383</item>
    </style>

    <style name="profileContent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:divider">@drawable/dialog_divider</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/loading</item>
    </style>

</resources>